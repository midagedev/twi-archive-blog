---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={`${SITE_TITLE} | Blog`} description={SITE_DESCRIPTION} />
		<style>
			.intro {
				display: flex;
				justify-content: space-between;
				gap: 1rem;
				align-items: end;
				margin-bottom: 0.75rem;
			}
			.intro p {
				margin: 0;
				font-size: 0.92rem;
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 0.9rem;
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.card {
				padding: 0.9rem;
				border-radius: 0.9rem;
				border: 1px solid rgba(var(--line), 0.78);
				background: rgba(var(--surface), 0.9);
				text-decoration: none;
				display: grid;
				grid-template-columns: 132px minmax(0, 1fr);
				gap: 0.75rem;
				align-items: start;
				height: 100%;
				transition: transform 140ms ease, border-color 140ms ease;
			}
			.card.no-thumb {
				grid-template-columns: 1fr;
			}
			.content {
				display: grid;
				gap: 0.45rem;
				min-width: 0;
			}
			.thumb {
				width: 100%;
				aspect-ratio: 4 / 3;
				object-fit: cover;
				border-radius: 0.65rem;
				border: 1px solid rgba(var(--line), 0.78);
				background: rgba(var(--line), 0.3);
			}
			.card:hover {
				transform: translateY(-2px);
				border-color: rgba(var(--line), 1);
			}
			.title {
				margin: 0;
				color: rgb(var(--ink));
				font-size: 1.03rem;
				line-height: 1.28;
			}
			.desc {
				margin: 0;
				font-size: 0.92rem;
			}
			.meta {
				display: flex;
				justify-content: space-between;
				gap: 0.6rem;
				font-size: 0.82rem;
				color: rgb(var(--ink-dim));
			}
			.tags {
				display: flex;
				gap: 0.35rem;
				flex-wrap: wrap;
			}
			.tag {
				font-size: 0.75rem;
				border-radius: 999px;
				padding: 0.1rem 0.42rem;
				background: rgba(var(--line), 0.9);
				color: rgb(var(--ink-dim));
			}
			@media (max-width: 860px) {
				.grid {
					grid-template-columns: 1fr;
				}
				.card,
				.card.no-thumb {
					grid-template-columns: 1fr;
				}
				.thumb {
					aspect-ratio: 16 / 9;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="intro">
				<div>
					<h1>Blog</h1>
					<p>실무에서 맞닥뜨린 문제를 분석하고 의사결정 근거를 남긴 기록</p>
				</div>
				<p>{posts.length} posts</p>
			</section>
			<ul class="grid">
				{
					posts.map((post) => (
						<li>
							<a class:list={['card', !post.data.thumbnail && 'no-thumb']} href={`/blog/${post.id}/`}>
								{
									post.data.thumbnail && (
										<img class="thumb" src={post.data.thumbnail} alt={post.data.title} loading="lazy" />
									)
								}
								<div class="content">
									<p class="meta">
										<span><FormattedDate date={post.data.pubDate} /></span>
										<span>{post.data.source ?? 'note'}</span>
									</p>
									<h2 class="title">{post.data.title}</h2>
									<p class="desc">{post.data.description}</p>
									{post.data.tags.length > 0 && (
										<div class="tags">
											{post.data.tags.slice(0, 4).map((tag) => (
												<span class="tag">#{tag}</span>
											))}
										</div>
									)}
								</div>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
