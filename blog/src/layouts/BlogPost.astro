---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	thumbnail,
	originalTweetUrl,
	source = 'note',
	tags = [],
} = Astro.props;

const embedTweetUrl = originalTweetUrl?.replace(/^https:\/\/x\.com\//, 'https://twitter.com/');
---

<html lang="ko">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={heroImage ?? thumbnail}
			ogType="article"
			publishedTime={pubDate.toISOString()}
			modifiedTime={updatedDate?.toISOString()}
		/>
		<style>
			.wrap {
				max-width: 820px;
				margin: 0 auto;
			}
			.hero-image {
				margin-bottom: 1rem;
			}
			.hero-image img {
				width: 100%;
				border-radius: 1rem;
			}
			.article-card {
				background: rgba(var(--surface), 0.9);
				border: 1px solid rgba(var(--line), 0.82);
				border-radius: 1rem;
				padding: 1rem;
			}
			.meta-row {
				display: flex;
				flex-wrap: wrap;
				gap: 0.4rem 0.7rem;
				font-size: 0.9rem;
				color: rgb(var(--ink-dim));
				margin-bottom: 0.75rem;
			}
			.title {
				margin-bottom: 1rem;
			}
			.title h1 {
				margin: 0;
				line-height: 1.17;
				font-size: clamp(1.45rem, 3.6vw, 2rem);
			}
			.tags {
				display: flex;
				gap: 0.35rem;
				flex-wrap: wrap;
				margin-bottom: 1rem;
			}
			.tag {
				font-size: 0.8rem;
				border-radius: 999px;
				padding: 0.15rem 0.45rem;
				background: rgba(var(--line), 0.9);
				color: rgb(var(--ink-dim));
			}
			.prose {
				color: rgb(var(--ink-dim));
			}
			.prose :global(img.tweet-image-inline) {
				display: inline-block;
				width: calc(50% - 0.4rem);
				margin: 0 0 0.6rem;
				vertical-align: top;
				height: auto;
			}
			.prose :global(h2),
			.prose :global(h3) {
				margin-top: 1.25em;
			}
			.prose :global(h3) {
				font-family: "Pretendard", "Apple SD Gothic Neo", "Noto Sans KR", sans-serif;
				font-size: 1.08rem;
				font-weight: 700;
				color: rgb(var(--ink));
				letter-spacing: 0;
			}
			.tweet-preview {
				margin-top: 1.1rem;
				padding-top: 1rem;
				border-top: 1px solid rgba(var(--line), 0.82);
			}
			.tweet-preview p {
				margin: 0 0 0.55rem;
				font-size: 0.86rem;
				color: rgb(var(--ink-dim));
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="wrap">
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="article-card">
					<div class="meta-row">
						<span><FormattedDate date={pubDate} /></span>
						{source && <span>{source}</span>}
						{
							updatedDate && (
								<span>Updated <FormattedDate date={updatedDate} /></span>
							)
						}
					</div>
					<div class="title">
						<h1>{title}</h1>
					</div>
					{tags.length > 0 && (
						<div class="tags">
							{tags.map((tag) => (
								<span class="tag">#{tag}</span>
							))}
						</div>
					)}
					<hr />
					<div class="prose">
						<slot />
					</div>
					{
						embedTweetUrl && (
							<div class="tweet-preview">
								<p>원문 미리보기</p>
								<blockquote class="twitter-tweet">
									<a href={embedTweetUrl}>{embedTweetUrl}</a>
								</blockquote>
								<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
							</div>
						)
					}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
